{
	"dockerFile": "./Dockerfile",
	"context": "..",
	"settings": {},
	// Useful extensions.
	"extensions": [
		"ms-python.python",
		"ms-vscode.cpptools",
		"ms-vscode.makefile-tools",
		"github.vscode-pull-request-github",
		"github.copilot"
	],
	// Enable GPUs.
	"runArgs": [
		"--gpus=all"
	],
	// Enable plotting.
	"mounts": [
		"type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix"
	],
	// Enable plotting.
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}"
	},
	"remoteUser": "vscode"
}
